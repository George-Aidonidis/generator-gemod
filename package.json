{
	"name": "generator-gemod",
	"version": "0.0.3",
	"description": "Opiniotated node module generator",
	"license": "MIT",
	"repository": "george-aidonidis/generator-gemod",
	"author": {
		"name": "George Aidonidis",
		"email": "georgeaidonidis@gmail.com",
		"url": "https://georgeaidonidis.com"
	},
	"engines": {
		"node": ">=6"
	},
	"scripts": {
		"lint": "xo",
		"codecov": "codecov",
		"test": "jest"
	},
	"files": [
		"app"
	],
	"keywords": [
		"yeoman-generator",
		"plugin",
		"boilerplate",
		"template",
		"scaffold",
		"node",
		"module",
		"node_module",
		"node-module",
		"init"
	],
	"dependencies": {
		"humanize-url": "^1.0.1",
		"is-scoped": "^1.0.0",
		"normalize-url": "^3.3.0",
		"superb": "^3.0.0",
		"underscore.string": "^3.0.3",
		"yeoman-generator": "^3.1.1"
	},
	"devDependencies": {
		"codecov": "^3.2.0",
		"husky": "^1.3.1",
		"jest": "^24.1.0",
		"lint-staged": "^8.1.4",
		"xo": "^0.24.0",
		"yeoman-assert": "^3.0.0",
		"yeoman-test": "^1.0.0"
	},
	"jest": {
		"coverageDirectory": "./coverage/",
		"collectCoverage": true,
		"setupFiles": [
			"./app/setup-test"
		],
		"testPathIgnorePatterns": [
			"temp",
			"templates"
		]
	},
	"lint-staged": {
		"*": [
			"xo --fix",
			"git add"
		]
	},
	"xo": {
		"ignores": [
			"app/templates/**"
		],
		"prettier": true,
		"envs": [
			"jest",
			"node",
			"browser"
		],
		"rules": {
			"camelcase": 1
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "yarn test"
		}
	}
}
